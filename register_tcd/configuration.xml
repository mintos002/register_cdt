<?xml version="1.0" encoding="utf-8"?>
<opencv_storage>

  <!-- Path to the output_images folder
          - by default images will be searched in the application folder,
            inside a folder named output_images that follows this scheme:
            -> output_images
                      |-> color
                      |     |-> c_20196141560502490749.png
                      |     |-> ...
                      |-> thermo
                      |     |-> t_20196141560502490749.png
                      |     |-> ...                       
            set the images path surrounded by "". For example: "C:\dir\thermo" -->
  <PathThermoImages>"C:\Users\aljuasin\Desktop\captura_tcd\_imagenes\patron\output_imagesx640_80\thermo"</PathThermoImages>
  <PathColorImages>"C:\Users\aljuasin\Desktop\captura_tcd\_imagenes\patron\output_imagesx640_80\color"</PathColorImages>
  <PathDepthImages>"C:\Users\aljuasin\Desktop\captura_tcd\_imagenes\patron\output_imagesx640_80\depth"</PathDepthImages>
  <NumImages>80</NumImages>
  <!-- Path to the .xml file of calibration parameters (the output of calibration_tcd app) -->
  <InputPath>"C:\Users\aljuasin\Desktop\captura_tcd\_imagenes\patron\output_imagesx640_80\spaceing24_extrinsics_640_80.xml"</InputPath>

  <!-- Flip images
        - 0 no flip (Default)
        - 1 flip thermal 
        - 2 flip color & depth
        - 3 flip all -->
  <FlipMode>0</FlipMode>
  <!-- Modes of the calibration pattern
        - 0 if the calibration pattern is hot and the background is cold (default)
        - 1 if the calibration pattern is cold and the backtround is hot  -->
  <PatternTemp>0</PatternTemp>
  <!-- Color of the calibration pattern
        - 0 Black board with white circles (default)
        - 1 White board with black circles -->
  <PatternColor>0</PatternColor>

  <!-- Number of inner corners per a item row and column. (square, circle) -->
  <BoardSize_Width>9</BoardSize_Width>
  <BoardSize_Height>3</BoardSize_Height>
  <!-- Specify the distance (d) between the center of the circles (x) in a row in mm
        In the example below a 3x1 Asymetric cirlce pattern is shown:
          | d |
          x - |   x          
              x     -->
  <CircleSize>24.7487</CircleSize>

  <!-- Show the overlay of the thermal and color images 
        - 0 do not show (default)
        - 1 do show-->
  <ShowOverlay>1</ShowOverlay>

</opencv_storage>